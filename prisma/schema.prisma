generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  steamId64 String   @unique

  personaName String?
  avatar      String?
  visibility  Int?      
  personaState Int?     // online/offline... 

  lastSyncAt DateTime?

  createdAt DateTime @default(now())
}
